<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="乐逍遥"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 服务状态卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务状态"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无障碍服务："
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tv_service_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未开启"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_accessibility"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="开启无障碍服务"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 目标APP选择卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 折叠头部 -->
                <LinearLayout
                    android:id="@+id/layout_app_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="目标APP"
                            android:textSize="14sp"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tv_current_package"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="com.ss.android.lark"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:ellipsize="middle"
                            android:singleLine="true" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_expand_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="展开" />
                </LinearLayout>

                <!-- 展开内容 -->
                <LinearLayout
                    android:id="@+id/layout_app_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="#E0E0E0" />

                    <RadioGroup
                        android:id="@+id/radio_group_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_feishu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="com.ss.android.lark"
                            android:textSize="13sp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_dingtalk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="com.alibaba.android.rimet"
                            android:textSize="13sp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_custom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="自定义包名"
                            android:textSize="13sp" />
                    </RadioGroup>

                    <!-- 自定义包名输入框 -->
                    <LinearLayout
                        android:id="@+id/layout_custom_package"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="输入包名"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_custom_package"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textSize="13sp"
                                android:singleLine="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_select_app"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="选择"
                            android:textAllCaps="false"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:cornerRadius="8dp" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_check_feishu"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="12dp"
                        android:text="检查安装状态"
                        android:textSize="13sp"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        app:cornerRadius="8dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 流程管理卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 折叠头部 -->
                <LinearLayout
                    android:id="@+id/layout_flow_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="执行流程"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_flow_step_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 步"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/iv_flow_expand_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="展开" />
                </LinearLayout>

                <!-- 展开内容 -->
                <LinearLayout
                    android:id="@+id/layout_flow_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="#E0E0E0" />

                    <!-- 步骤列表容器 -->
                    <LinearLayout
                        android:id="@+id/layout_flow_steps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <!-- 添加步骤按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_step"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="8dp"
                        android:text="+ 添加步骤"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="8dp"
                        app:strokeColor="#4CAF50" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 立即执行卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_punch_now"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="立即执行"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 定时卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="定时"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- 星期选择 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="执行日期"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <LinearLayout
                    android:id="@+id/layout_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/day_selector_background"
                    android:padding="4dp">

                    <ToggleButton
                        android:id="@+id/chip_monday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:layout_margin="2dp"
                        android:textOn="一"
                        android:textOff="一"
                        android:textSize="15sp"
                        android:textColor="@color/day_text_selector"
                        android:background="@drawable/day_button_selector"
                        android:button="@null" />

                    <ToggleButton
                        android:id="@+id/chip_tuesday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:layout_margin="2dp"
                        android:textOn="二"
                        android:textOff="二"
                        android:textSize="15sp"
                        android:textColor="@color/day_text_selector"
                        android:background="@drawable/day_button_selector"
                        android:button="@null" />

                    <ToggleButton
                        android:id="@+id/chip_wednesday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:layout_margin="2dp"
                        android:textOn="三"
                        android:textOff="三"
                        android:textSize="15sp"
                        android:textColor="@color/day_text_selector"
                        android:background="@drawable/day_button_selector"
                        android:button="@null" />

                    <ToggleButton
                        android:id="@+id/chip_thursday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:layout_margin="2dp"
                        android:textOn="四"
                        android:textOff="四"
                        android:textSize="15sp"
                        android:textColor="@color/day_text_selector"
                        android:background="@drawable/day_button_selector"
                        android:button="@null" />

                    <ToggleButton
                        android:id="@+id/chip_friday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:layout_margin="2dp"
                        android:textOn="五"
                        android:textOff="五"
                        android:textSize="15sp"
                        android:textColor="@color/day_text_selector"
                        android:background="@drawable/day_button_selector"
                        android:button="@null" />

                    <ToggleButton
                        android:id="@+id/chip_saturday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:layout_margin="2dp"
                        android:textOn="六"
                        android:textOff="六"
                        android:textSize="15sp"
                        android:textColor="@color/day_weekend_text_selector"
                        android:background="@drawable/day_button_weekend_selector"
                        android:button="@null" />

                    <ToggleButton
                        android:id="@+id/chip_sunday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:layout_margin="2dp"
                        android:textOn="日"
                        android:textOff="日"
                        android:textSize="15sp"
                        android:textColor="@color/day_weekend_text_selector"
                        android:background="@drawable/day_button_weekend_selector"
                        android:button="@null" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginTop="12dp" />

                <!-- 上班时间 -->
                <LinearLayout
                    android:id="@+id/layout_morning_time"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="zangxing"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:drawableStart="@drawable/ic_morning"
                        android:drawablePadding="8dp" />

                    <TextView
                        android:id="@+id/tv_morning_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:50-09:20"
                        android:textSize="16sp"
                        android:textColor="#2196F3"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE" />

                <!-- 下班时间 -->
                <LinearLayout
                    android:id="@+id/layout_evening_time"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="wanhei"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:drawableStart="@drawable/ic_evening"
                        android:drawablePadding="8dp" />

                    <TextView
                        android:id="@+id/tv_evening_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:40-19:10"
                        android:textSize="16sp"
                        android:textColor="#FF9800"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="定时关闭飞书"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_close_time"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="+ 添加"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        app:cornerRadius="8dp" />
                </LinearLayout>

                <!-- 动态关闭时间列表容器 -->
                <LinearLayout
                    android:id="@+id/container_close_times"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 状态信息 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运行状态"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="等待操作..."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 使用说明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="使用说明：\n1. 首先点击「开启无障碍服务」\n2. 在系统设置中找到本APP并开启\n3. 返回后点击「立即」测试\n4. 如需定时，开启开关并设置时间"
            android:textSize="12sp"
            android:textColor="#999999"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</ScrollView>
