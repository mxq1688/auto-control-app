<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@drawable/item_step_background">

    <!-- 序号 -->
    <TextView
        android:id="@+id/tv_step_number"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="1"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/circle_number_bg" />

    <!-- 步骤描述 -->
    <TextView
        android:id="@+id/tv_step_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:text="打开目标APP"
        android:textSize="14sp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:singleLine="true" />

    <!-- 编辑按钮 -->
    <ImageButton
        android:id="@+id/btn_edit_step"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_edit"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="编辑" />

    <!-- 删除按钮 -->
    <ImageButton
        android:id="@+id/btn_delete_step"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="删除" />

</LinearLayout>
